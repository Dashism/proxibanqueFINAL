<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>proxibanqueFINAL</display-name>
	
	<servlet>
		<servlet-name>spring-context</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>spring-context</servlet-name>
		<url-pattern>*.html</url-pattern>
		<url-pattern>/webservices/*</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>Mon filtre ForceEncoding</filter-name>
		<filter-class>fr.formation.proxibanqueFINAL.presentation.filter.ForceEncodingFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>Mon filtre ForceEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<resource-ref>
		<res-ref-name>jdbc/formation</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
</web-app>





